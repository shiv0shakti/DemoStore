<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/sunsetFavSunriseLabel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/sunset_sunsrise_label"
            android:textAlignment="textEnd"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sunsetPosSunriseLabel" />

        <TextView
            android:id="@+id/sunsetFavSunsetLabel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/sunset_sunset_label"
            android:textAlignment="textEnd"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sunsetFavSunriseLabel" />

        <TextView
            android:id="@+id/sunsetFavDawnLabel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/sunset_dawn_label"
            android:textAlignment="textEnd"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/sunsetFavSunriseValue"
            app:layout_constraintTop_toBottomOf="@+id/sunsetPosSunriseLabel" />

        <TextView
            android:id="@+id/sunsetFavDuskLabel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:text="@string/sunset_dusk_label"
            android:textAlignment="textEnd"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/sunsetFavSunsetValue"
            app:layout_constraintTop_toBottomOf="@+id/sunsetFavDawnLabel" />

        <TextView
            android:id="@+id/sunsetFavSunriseValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/sunsetFavSunriseLabel"
            app:layout_constraintTop_toBottomOf="@+id/sunsetPosSunriseLabel" />

        <TextView
            android:id="@+id/sunsetFavSunsetValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/sunsetFavSunsetLabel"
            app:layout_constraintTop_toBottomOf="@+id/sunsetFavSunriseValue" />

        <TextView
            android:id="@+id/sunsetFavDawnValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/sunsetFavDawnLabel"
            app:layout_constraintTop_toBottomOf="@+id/sunsetPosSunriseLabel" />

        <TextView
            android:id="@+id/sunsetFavDuskValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/sunsetFavDuskLabel"
            app:layout_constraintTop_toBottomOf="@+id/sunsetFavDawnValue"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/sunsetPosSunriseLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/sunset_fav_title"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sunsetFavTitleLat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/sunset_lat_detail_value"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/sunsetPosSunriseLabel"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sunsetFavTitleComma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sunset_comma"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/sunsetFavTitleLat"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sunsetFavTitleLng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/sunset_lng_detail_value"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/sunsetFavTitleLat"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
